1. IF

	if (condition) {
		statements;
	}

2. IF ELSE

	if (condition) {
		statements;
	} else {
		statementsl;
	}

3. If ELSEIF ELSE

	if (condition) {
		statements;
	} elseif (condition) {
		statementsl;
	} elseif (condition) {
		statementsl;
	} .
	  .
	  .
	else {
		statementsl;
	}

4. SWITCH

	switch (variable) {
	    case value1:
	        code to be executed if variable = value1;
	        break;
	    case value2:
	        code to be executed if variable = value2;
	        break;
	    case value3:
	        code to be executed if variable = value3;
	        break;
	    ...
	    default:
	        code to be executed if variable  is different from all labels;
	}